<div class="row">
	<div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
		<h1>create a stretch</h1>

		<form action="/stretches" method="post">
		  
		  <div class="form-group">
		  	<input required type="text" class="form-control" name="stretch" placeholder="stretch description">
		  	<span id="helpBlock" class="help-block">max 200 chars.</span>
			</div>

		  <div class="form-group">
			  <select required class="form-control" name="stretch_type_id">
			  	<option value="">category</option>
					<% StretchType.all.each do |stretch_type| %>
					<option value="<%= stretch_type.id %>"><%= stretch_type.name %></option>
					<% end %>
			  </select>
			 </div>

		  <button type="submit" class="btn btn-default btn-block">create stretch</button>

		</form>

	</div>
</div>