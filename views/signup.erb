<div class="heading text-center">
	<a href="/"><span class="fa fa-expand fa-4x"></span></a>
	<h1>sign up</h1>
</div>

<form action="/register" method="post">
  
  <div class="form-group">
  	<input maxlength="15" required type="text" class="form-control" name="username" placeholder="username">
	</div>

	 <div class="form-group">
  	<input required type="text" class="form-control" name="email" placeholder="e-mail">
	</div>
	
	<div class="form-group">
  	<input maxlength="50" required type="text" class="form-control" name="password" placeholder="password">
	</div>
  
  <button type="submit" class="btn btn-default btn-block">sign up</button>

</form>