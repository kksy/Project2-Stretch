<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Stretch App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  
  <!-- font awesome -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

	<!-- main stylesheet -->
  <link rel="stylesheet" href="/stylesheets/main.css">

  <!-- masonry -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.2/masonry.pkgd.js"></script>

  <!-- images loaded for masonry -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.2.0/imagesloaded.pkgd.min.js"></script>
  
</head>
<body>
	
	<!-- nav bar top -->
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/"><span class="fa fa-expand">stretch</span></a>
	    </div>
			
			<!-- show nuser dashboard in navbar -->
	    <% if logged_in? %>
		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      
		      <ul class="nav navbar-nav">

		        <li><a href="/stretches">stretches</a></li>
		        <li><a href="/user/entries#pending">pending</a></li>
				    <li><a href="/user/entries#completed">complete</a></li>
				    <li role="separator" class="divider"></li>
				    <li><a href="/stretches/new">suggest a stretch</a></li>
		      </ul>

					<ul class="nav navbar-nav navbar-right">
	        
		        <li><p class="navbar-text">Hello, <%= current_user.name %>!</p></li>
		        <li>
		          <form class="" action="/session" method="post">
		            <input type="hidden" name="_method" value="delete">
		            <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Log Out</button>
		          </form>
		        </li>
		       
		      </ul>
		      
				</div>
	    <% end %>

		 </div>
	</nav>
	
	<div class="container"> 
  	<div class="row">
  		<div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">

 		 <%= yield %>

   		</div>
  	</div>
	</div>

	<!-- masonry script -->
	<script src="/javascripts/masonry.js"></script>

</body>